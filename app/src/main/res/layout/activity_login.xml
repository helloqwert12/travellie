<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.mobile.absoluke.travellie.LoginActivity">

    <!-- Login progress -->

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginTop="60dp"
        android:cropToPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sign_in_logo" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="144dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_logo">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="195dp"
            android:layout_height="107dp"
            android:lines="3"
            android:maxLines="3"
            android:singleLine="false"
            android:text="@string/intro"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:lines="3"
            android:maxLines="3"
            android:text="@string/sub_intro"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <com.facebook.login.widget.LoginButton xmlns:facebook="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fb_sign_in_button"
            style="@style/sign_in_btn"
            android:layout_marginTop="8dp"
            android:paddingBottom="14dp"
            android:paddingTop="12dp"
            android:textColor="#39579b"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_text"
            facebook:com_facebook_login_text="       Facebook" />

        <Button
            android:id="@+id/gg_sign_in_button"
            style="@style/sign_in_btn"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="       Google"
            android:textColor="#db4437"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fb_sign_in_button"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_text" />

        <ImageView
            android:id="@+id/fb_logo"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:elevation="4dp"
            android:translationZ="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/fb_sign_in_button"
            app:layout_constraintStart_toStartOf="@+id/fb_sign_in_button"
            app:layout_constraintTop_toTopOf="@+id/fb_sign_in_button"
            app:srcCompat="@drawable/fb" />

        <ImageView
            android:id="@+id/gg_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:elevation="6dp"
            android:translationZ="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/gg_sign_in_button"
            app:layout_constraintStart_toStartOf="@+id/gg_sign_in_button"
            app:layout_constraintTop_toTopOf="@+id/gg_sign_in_button"
            app:srcCompat="@drawable/googleg_standard_color_18" />

        <TextView
            android:id="@+id/sign_in_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in with"
            android:textColor="@color/com_facebook_button_border_color_focused"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
